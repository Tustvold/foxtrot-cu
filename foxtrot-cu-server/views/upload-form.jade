include mixins
include ajax-form-mixin
doctype
html(lang='en')
    head
        +standard_head("Upload Form")
    body(style="padding-bottom:10rem;")
        +standard_body()
        .col-md-6.col-md-offset-3
            h1 Upload Form
            .panel.panel-default
                .panel-body
                    form(method="post",enctype="multipart/form-data",action="/upload",class='form-group')
                            input(type="text",name="title",placeholder="Title", class="form-control")
                            h4 File A
                            +file_browser_button("a")


                            h4 File B
                            +file_browser_button("b")

                            br
                            button(type="submit",class="btn btn-primary")
                                |Submit

        +ajaxFormMixin('form')